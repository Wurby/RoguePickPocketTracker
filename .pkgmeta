package-as: RoguePickPocketTracker

# Enable creation of a -nolib version
enable-nolib-creation: no

# Files and directories to ignore during packaging
ignore:
  - .git
  - .github
  - .gitignore
  - README.md
  - .pkgmeta
  - "*/README.md"  # Ignore README files in subdirectories
  - todos.txt
  - buildAndRelease.sh

# Optional: Include license file
# license-output: LICENSE.txt

# Manual override for changelog (optional)
# manual-changelog: |
#   - Fixed issue with options panel
#   - Added slash command /pp options
